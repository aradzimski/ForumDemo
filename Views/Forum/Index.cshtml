@model ForumDemo.ViewModels.Main.ForumViewModel

@{
    ViewData["Title"] = Model.Forum.Title;
}

@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="Forum" asp-action="Add" asp-route-id="@Model.Forum.Id" asp-route-urltitle="@Model.Forum.UrlTitle">Create topic</a>
}

<table class="table table-hover">
    <tbody>
        @foreach (var topic in Model.Forum.Topics)
        {
            <tr>
                <td>
                    <a asp-controller="Topic" asp-action="Index" asp-route-id="@topic.Id" asp-route-urltitle="@topic.UrlTitle">@topic.Title</a>
                </td>
            </tr>
        }
    </tbody>
</table>
