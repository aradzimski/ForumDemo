@model ForumDemo.ViewModels.Main.ForumViewModel

@{
    ViewData["Title"] = Model.Forum.Title;
}

@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="Home" asp-action="CreateTopic" asp-route-id="@Model.Forum.Id">Create topic</a>
}

<table class="table table-hover">
    <tbody>
        @foreach (var topic in Model.Forum.Topics)
        {
            <tr>
                <td>
                    <a asp-controller="Home" asp-action="Topic" asp-route-id="@topic.Id">@topic.Title</a>
                </td>
            </tr>
        }
    </tbody>
</table>
